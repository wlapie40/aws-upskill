pipeline {
    agent none
    environment {
        FLASK_ENV = 'docker'
    }
    stages {
        //stage('Gen creds') {
          //agent { docker { image 'python:3.7.4' } }
            //steps {
              //sh 'pip install boto3==1.9.209'
              //sh 'python gen_creds_for_db.py'
