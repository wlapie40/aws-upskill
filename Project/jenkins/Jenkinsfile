        stage('Building') {
            agent any
            steps {
            withAWS(credentials: 'aws-credentials', region: 'eu-west-1') {
    sh 'aws iam get-user'
}
             dir ('Project/jenkins/') {
                  sh 'make build'
                }
                    }
        }
        stage('Destroying') {
            agent any
            steps {
           dir ('Project/jenkins/') {
                sh 'make down'
              }
            }
        }
    }
}
