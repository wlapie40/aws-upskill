pipeline {
    agent none
    environment {
        FLASK_ENV = 'docker'
    }
    stages {
        stage('Gen creds') {
          agent { docker { image 'python:3.7.2' } }
            steps {
              sh ''
              sh 'python --version'
              sh 'pip install -r requirements.txt'
              sh 'python gen_creds_for_db.py'
            }
        }
        stage('Building') {
            agent any
            steps {
             dir ('Project/jenkins/') {
                  sh 'make build'
                }
                    }
        }
        stage('Destroying') {
            agent any
            steps {
           dir ('Project/jenkins/') {
                sh 'make down'
              }
            }
        }
    }
}
